<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nyanjuimarvin.basedshare">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BasedShare">
        <activity
            android:name=".activities.AccountActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MusicActivity"
            android:exported="false" />
        <activity
            android:name=".activities.FilmActivity"
            android:exported="false" />
        <activity
            android:name=".activities.GameActivity"
            android:exported="false" />
        <activity
            android:name=".activities.DetailActivity"
            android:exported="false"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".activities.FeedActivity"
            android:exported="false"
            android:label="Feed" />
        <activity
            android:name=".activities.JoinActivity"
            android:exported="false"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>